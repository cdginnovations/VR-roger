<% if user_signed_in? %>

	<div class="banner" style="background-image: url('<%= current_user.top_banner %>');">

		<header class="inter_header">
			<a href="/"><img src="/assets/logo_white.png" width="30px"></a>
	      	<div class="inter_header right_item">
	      		<%= link_to "Log out", destroy_user_session_path, method: "delete" %>      			
	      	</div>
	      	<% if current_user.role == "admin" %>
	      		<div class="inter_header right_item"><%= link_to "Users", users_path %></div>
	      	<%end%>
		</header>


		<div class="user_info">
			<div class="user_info_top">

			</div>
			<div class="profile_pic">
				<a href="/users/<%= current_user.id %>"><img src="<%= current_user.photo %>" class="img-circle"></a>
			</div>
			<div class="profile_info">
				<span style=" font-size:17px; font-weight:bold;"><%= current_user.first_name %> <%= current_user.last_name %></span><br>
				<%= current_user.role %><br>
				<%= current_user.last_sign_in_at %>
			</div>
		</div>

	</div>

<% else %>
	<header class="header">
		<menu>
			<div class="logo"><a href="/"><img src="/assets/logo_home.png" width="100%"></a></div>
			<% @main_menu.each do |menu| %>
				<a href="/<%= menu %>"> <div class="menu_item"><%= menu.capitalize %></div> </a>
			<%end%>
	    	<a href="<%= new_user_registration_path %>">
	    		<div class="inter_header register_item">Register</div>
	    	</a>
	    	<div class="inter_header right_item">
	    		<%= link_to "Log In", new_user_session_path %>
	    	</div>
    	</menu>
    </header>
<% end %>
