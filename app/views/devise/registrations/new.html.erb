<div class="bg_scroll dynamic_h" style="background-image:url('/assets/bg2.jpg'); height:calc(100% - 50px);">
    <div style="margin-top:300px;"></div><br>
    <div class="register_info half white-bg_09 register_height">
      
    </div>  

    <div class="blur-wrapper register_form half" style="padding: 0;">
          
      <div class="blur-bg bg_scroll" style="background-image: url('/assets/bg2.jpg');"></div>
        
        <div class="blur-text register-text black-bg_05 register_height">
          <h2>Register</h2>

          <hr style="border-top:0.5px dotted #999; opacity:0.3; margin:20px auto; max-width:400px; min-width:50%;">
          
          <%= form_for(resource, as: resource_name, url: registration_path(resource_name), multipart: true) do |f| %>
            <%= devise_error_messages! %>

            
            <%= f.text_field :first_name, autofocus: true, placeholder:'First Name', class:'half' %><br>
            <%= f.text_field :last_name, placeholder:'Last Name', class:'half' %><br>
            <%= f.date_field :age, placeholder:'Age', class:'half' %><br>
            <%= f.select :race, ([["Select Race", "Select Race"], ["Hispanic or Latino", "Hispanic or Latino"], ["American Indian or Alaska Native", "American Indian or Alaska Native"], ["Asian", "Asian"], ["Black or African American", "Black or African American"], ["Native Hawaiian or Pacific Islander", "Native Hawaiian or Pacific Islander"], ["White", "WhiteWhite"]]), class:'half' %>
            
            <br><br>
            
            Email and password
            <% if @minimum_password_length %>
              <span style="font-size:10px;">(<%= @minimum_password_length %> characters minimum)</span>
            <% end %>:<br>

            <%= f.email_field :email, autofocus: true, placeholder:'email', class:'half' %><br>
            <%= f.password_field :password, autocomplete: "off", placeholder:'Password', class:'half' %><br>
            <%= f.password_field :password_confirmation, autocomplete: "off", placeholder:'Confirm Password', class:'half' %>
            <br><br>
            

             <!-- Profile:<br> 
            <%= f.file_field :profile, class:'half' %><br>

            Banner:<br>
            <%= f.file_field :banner, class:'half' %>
            <br>
            <%= f.select(:role, User.roles.keys.map {|role| [role.titleize,role]}) %> -->

            <br>
            <%= f.submit "Sign up" %>
            <br><br>

          

          <!-- <div class="field">
            <%= f.label :education %><br />
            <%= f.text_field :education, autofocus: true %>
          </div> -->

          <!-- <div class="field">
            <%= f.label :company %><br />
            <%= f.text_field :company, autofocus: true %>
          </div> -->
        <% end %>
        <%= render "devise/shared/links" %>
        </div>

    </div>
</div>