<p id="notice"><%= notice %></p>

<p class="course_title">
  <%= @course.course_title %>
</p>

<p>
  <strong>Description:</strong>
  <%= @course.description %>
</p>


<h2>Chapters</h2>

<table>
  <thead>
    <tr>
      <th>Course</th>
      <th>Chapter title</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @course.chapters.each do |chapter| %>
      <tr>
        <td><%= chapter.course.course_title %></td>
        <td><%= link_to chapter.chapter_title, chapter %></td>
        <td><%= chapter.description %></td>
        <% if current_user.role == 'admin'  %>
          <td><%= link_to 'Edit', edit_chapter_path(chapter) %></td>
          <td><%= link_to 'Destroy', chapter, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>


<br>

<% if current_user.role == 'admin'  %>
<%= button_to 'Create Chapter', new_course_chapter_path(@course.id), class:"green_sft" %>

<br>

<%= link_to 'Edit', edit_course_path(@course) %> |
<%= link_to 'Back', courses_path %>

<% end %>
