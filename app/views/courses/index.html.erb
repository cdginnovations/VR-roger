<h3>My Courses</h3>
<br>


<br>

<div class="card_list">

  <% current_user.courses.each do |course| %>
    <%if current_user.level_2 %>
      <div class="card_item">
        <div class="card_title">
          <%= link_to course.title, course %>
        </div>
        <div class="card_desc">
          <%= course.description %>
        </div>
        <div class="card_edit_sec">
          <!-- <div class="card_edit">
              <%= link_to 'edit', edit_course_path(course) %>
          </div> -->
          <div class="card_delete">
                <%= link_to 'x', course, method: :delete, data: { confirm: 'Are you sure?' } %>
          </div>
        </div>
      </div>
    <% end %>
  <% end %>

</div>

<% if current_user.level_2 %>
  <%= render './courses/form' %></div>
<% end %>