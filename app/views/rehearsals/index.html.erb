<p id="notice"><%= notice %></p>

<h1>Listing Rehearsals</h1>

<table>
  <thead>
    <tr>
      <th>Course</th>
      <th>Group</th>
      <th>Course number</th>
      <th>Token</th>
      <th>Video token</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @rehearsals.each do |rehearsal| %>
      <tr>
        <td><%= rehearsal.course %></td>        
        <td><%= rehearsal.group %></td>
        <td><%= rehearsal.course_number %></td>
        <td><%= rehearsal.token %></td>
        <td><%= rehearsal.video_token %></td>
        <td><%= link_to 'Destroy', rehearsal, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

