
<div class="course_title">
  <%= @lesson.title %>
</div>


<%= link_to 'record explanation', prompt_view_lesson_path(@lesson) %>  
<%= link_to 'record prompt', prompt_view_lesson_path(@lesson) %>
<%= link_to 'record role model', role_model_view_lesson_path(@lesson.id) %>


  <!-- show first as lightbox -->
  <div class="site_wrapper" style="width: 1100px;">
    <div class="lesson_explanation" style="display: none;">
      <ziggeo
      ziggeo-video= <%= @lesson.explanation %>
      ziggeo-width=625
      ziggeo-height=400>
      </ziggeo>
      <%= @lesson.explanation_script %>
    </div>

    <div class="perfomance">
      <h2>performance</h2>
      <ziggeo
      ziggeo-width=625
      ziggeo-height=400>
      </ziggeo>
    </div>




    <div class="prompt_model">
      <h2>Prompt & Role Model</h2>
      <div class="lesson_prompt">
        <ziggeo
        ziggeo-video= <%= @lesson.prompt %>
        ziggeo-width=400
        ziggeo-height=195>
        </ziggeo>
        <%= @lesson.prompt_script %>
      </div>
      <div class="lesson_model">
        <ziggeo
        ziggeo-video= <%= @lesson.role_model %>
        ziggeo-width=400
        ziggeo-height=195>
        </ziggeo>
        <%= @lesson.model_script %>
      </div>
    </div>
  </div>

<a href="<%= new_lesson_practice_path(@lesson) %>">
  <button class="green_sft"> Submit </button>
</a>

<% end %>
